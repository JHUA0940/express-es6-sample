{
  "name": "express-es6-sample",
  "version": "0.2.0",
  "private": true,
  "author": {
    "name": "Jonathan Cunanan",
    "url": "https://github.com/jcunanan05"
  },
  "license": "MIT",
  "dependencies": {
    "cookie-parser": "~1.4.4",
    "debug": "~2.6.9",
    "express": "~4.16.1",
    "morgan": "~1.9.1",
    "nodemon": "^2.0.2",
    "@babel/cli": "^7.8.4",
    "@babel/core": "^7.8.4",
    "@babel/preset-env": "^7.8.4"
  },
  "devDependencies": {
    "jest": "^25.1.0"
  },
  "nodemonConfig": {
    "exec": "npm run dev",
    "watch": [
      "server/*",
      "public/*"
    ],
    "ignore": [
      "**/__tests__/**",
      "*.test.js",
      "*.spec.js"
    ]
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  },
  "scripts": {
    // Start the production server after building the application
    "start": "npm run build && npm run prod",

    // Build the application by cleaning the dist-server and transpiling
    "build": "npm run clean && npm run transpile",

    // Run the server from the transpiled code in the dist-server folder
    "server": "node ./dist-server/bin/www",

    // Development server with NODE_ENV set to development
    "dev": "NODE_ENV=development npm run server",

    // Production server with NODE_ENV set to production
    "prod": "NODE_ENV=production npm run server",

    // Transpile the ES6 code from the server folder to the dist-server folder
    "transpile": "babel ./server --out-dir dist-server",

    // Clean the dist-server folder before building
    "clean": "rm -rf dist-server",

    // Watch for file changes during development
    "watch:dev": "nodemon",

    // Run the test suite using Jest
    "test": "jest"
  }
}
